{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-use-before-define": [2, "nofunc"],
    "no-undef": [2],
    "no-unused-vars": [2],
    "no-extra-bind": [2],
    "no-implicit-globals": [2],
    "prefer-promise-reject-errors": [2],
    "no-await-in-loop": [2],
    "no-console": [2],
    "eqeqeq": [2],
    "no-eval": [2],
    "prettier/prettier": [2, { "singleQuote": true, "semi": false }]
  }
}
